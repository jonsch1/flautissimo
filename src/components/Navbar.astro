---
// Navbar component
---

<nav class="bg-white/95 backdrop-blur-sm border-b border-gray-200">
  <div class="container mx-auto px-4">
    <div class="flex items-center justify-between">
      <div class="flex items-center">
        <h1 class="text-2xl md:text-3xl font-bold my-4">
          <a href="/" class="text-primary-dark hover:text-primary transition-colors">
            Musikhaus-Aachen
          </a>
        </h1>
      </div>

      <!-- Mobile menu button -->
      <button id="mobile-menu-button" class="md:hidden p-2 rounded-lg bg-primary/10 hover:bg-primary/20" aria-label="Toggle menu">
        <svg class="w-6 h-6 text-primary-dark" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>

      <!-- Desktop menu -->
      <div class="hidden md:flex items-center space-x-6">
        <a href="/about" class="text-gray-700 hover:text-primary-dark font-medium transition-colors">
          Über uns
        </a>
        <a href="/products" class="text-gray-700 hover:text-primary-dark font-medium transition-colors">
          Das Sortiment
        </a>
        <a href="/blog" class="text-gray-700 hover:text-primary-dark font-medium transition-colors">
          Neuigkeiten
        </a>
        <a href="/contact" class="text-gray-700 hover:text-primary-dark font-medium transition-colors">
          Kontakt
        </a>
      </div>
    </div>

    <!-- Mobile menu -->
    <div id="mobile-menu" class="hidden md:hidden pb-4">
      <div class="flex flex-col space-y-3 text-center">
        <a href="/about" class="text-gray-700 hover:text-primary-dark font-medium py-2 transition-colors">
          Über uns
        </a>
        <a href="/products" class="text-gray-700 hover:text-primary-dark font-medium py-2 transition-colors">
          Das Sortiment
        </a>
        <a href="/blog" class="text-gray-700 hover:text-primary-dark font-medium py-2 transition-colors">
          Neuigkeiten
        </a>
        <a href="/contact" class="text-gray-700 hover:text-primary-dark font-medium py-2 transition-colors">
          Kontakt
        </a>
      </div>
    </div>
  </div>
</nav>

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
